<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dafault</item>
        <item name="colorPrimaryDark">@color/dafault</item>
        <item name="colorAccent">@color/dafault</item>
        <item name="android:statusBarColor">@color/bar</item>
        <item name="android:navigationBarColor">@color/bar</item>
        <item name="android:background">@color/dafault</item>
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">ticketfont2.tff</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">#ffffff</item>
    </style>

    <style name="myTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:drawable">@color/ValidBar</item>
        <item name="android:background">#ff0000</item>
    </style>

    <style name="InvalidTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/InvalidRed</item>
        <item name="colorPrimaryDark">@color/InvalidRed</item>
        <item name="colorAccent">@color/InvalidRed</item>
        <item name="android:statusBarColor">@color/InvalidBar</item>
        <item name="android:navigationBarColor">@color/InvalidBar</item>
        <item name="android:background">@color/InvalidRed</item>
    </style>

    <style name="ValidTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Valid</item>
        <item name="colorPrimaryDark">@color/Valid</item>
        <item name="colorAccent">@color/Valid</item>
        <item name="android:statusBarColor">@color/ValidBar</item>
        <item name="android:navigationBarColor">@color/ValidBar</item>
        <item name="android:background">@color/Valid</item>
    </style>

</resources>
